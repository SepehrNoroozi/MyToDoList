<Window x:Class="MyTodoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My ToDoList" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ListLeft" Grid.Column="0" Margin="5" />
        <ListBox x:Name="ListRight" Grid.Column="1" Margin="5" />

        <Button Content="Move to Right" Width="120" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,10" Click="MoveToRight_Click"/>

        <Button Content="Move to Left" Width="120" Height="30"
                Grid.Column="1"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,10" Click="MoveToLeft_Click"/>
    </Grid>
</Window>
