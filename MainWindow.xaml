<Window x:Class="MyTodoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My ToDoList"
        Height="600"
        Width="1000"
        Background="#1e1e1e"
        Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Search and filter -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Margin="0 0 10 0"
                     Foreground="LightGray"
                     TextChanged="SearchBox_TextChanged"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>
            <TextBox x:Name="FilterBox"
                     Width="200"
                     Margin="0 0 10 0"
                     Foreground="LightGray"
                     GotFocus="FilterBox_GotFocus"
                     LostFocus="FilterBox_LostFocus"/>
            <ComboBox x:Name="SortBox"
                      Width="150"
                      SelectionChanged="SortBox_SelectionChanged">
                <ComboBoxItem Content="Sort by Due Date"/>
                <ComboBoxItem Content="Sort by Priority"/>
            </ComboBox>
        </StackPanel>

        <!-- Projects list -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Projects" FontSize="16" Margin="5"/>
            <ListBox x:Name="ProjectsList" Margin="5" SelectionChanged="ProjectsList_SelectionChanged"/>
            <Button Content="Add Project" Click="AddProject_Click" Margin="5"/>
        </StackPanel>

        <!-- Tasks list -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Tasks" FontSize="16" Margin="5"/>
            <ListBox x:Name="TasksList"
                     Margin="5"
                     PreviewMouseLeftButtonDown="TasksList_PreviewMouseLeftButtonDown"
                     AllowDrop="True"
                     Drop="TasksList_Drop"
                     MouseDoubleClick="TasksList_MouseDoubleClick"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Add Task" Click="AddTask_Click" Margin="0 0 5 0"/>
                <Button Content="Export Data" Click="ExportData_Click" Margin="0 0 5 0"/>
                <Button Content="Import Data" Click="ImportData_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
