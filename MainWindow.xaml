<Window x:Class="MyTodoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyTodoist" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Projects Column -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Projects" FontSize="16" FontWeight="Bold" Margin="5" />
            <ListBox x:Name="ProjectsList"
                     Margin="5"
                     SelectionChanged="ProjectsList_SelectionChanged"/>
            <Button Content="Add Project"
                    Margin="5"
                    Click="AddProject_Click"/>
        </StackPanel>

        <!-- Tasks Column -->
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="TasksHeader"
                       Text="Tasks"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="5"/>
            <ListBox x:Name="TasksList"
                     Margin="5"
                     AllowDrop="True"
                     PreviewMouseLeftButtonDown="TasksList_PreviewMouseLeftButtonDown"
                     DragOver="TasksList_DragOver"
                     Drop="TasksList_Drop"/>
            <Button Content="Add Task"
                    Margin="5"
                    Click="AddTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
