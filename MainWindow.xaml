<Window x:Class="MyTodoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyToDoList" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
            
        <!--Projects List -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Projects" FontWeight="Bold" Margin="5" />
            <ListBox x:Name="ProjectsList" Margin="5" SelectionChanged="ProjectsList_SelectionChanged"/>
            <Button Content="Add Project" Margin="5" Click="AddProject_Click"/>
        </StackPanel>

        <!--Tasks List -->
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="TasksHeader" Text="Tasks" FontWeight="Bold" Margin="5" />
            <ListBox x:Name="TasksList"
                Grid.Column="1"
                AllowDrop="True"
                PreviewMouseLeftButtonDown="TasksList_PreviewMouseLeftButtonDown"
                Drop="TasksList_Drop"
                DragOver="TasksList_DragOver"
                Margin="5" />
            <Button Content="Add Task" Margin="5" Click="AddTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
