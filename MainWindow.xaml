<Window x:Class="MyTodoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyTodoist" Height="600" Width="1000"
        Background="#1E1E1E"
        Foreground="White">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Projects Column -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Projects"
                       FontSize="16" FontWeight="Bold" Margin="5"
                       Foreground="White"/>
            <ListBox x:Name="ProjectsList"
                     Margin="5"
                     Background="#2D2D30" Foreground="White" BorderBrush="#444"
                     SelectionChanged="ProjectsList_SelectionChanged">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Edit Project" Click="EditProject_Click"/>
                        <MenuItem Header="Delete Project" Click="DeleteProject_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            <Button Content="Add Project" Margin="5"
                    Background="#3E3E42" Foreground="White" BorderBrush="#555"
                    Click="AddProject_Click"/>
        </StackPanel>

        <!-- Tasks Column -->
        <StackPanel Grid.Column="1">
            <!-- Filter / Sort / Backup Section -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="FilterBox" Width="200" Margin="0,0,5,0"
                         Background="#2D2D30" Foreground="White" BorderBrush="#555"
                         GotFocus="FilterBox_GotFocus" LostFocus="FilterBox_LostFocus"/>
                <Button Content="Apply Filter" Background="#3E3E42" Foreground="White"
                        BorderBrush="#555" Click="ApplyFilter_Click"/>
                <Button Content="Clear Filter" Background="#3E3E42" Foreground="White"
                        BorderBrush="#555" Margin="5,0,0,0" Click="ClearFilter_Click"/>
                <ComboBox x:Name="SortCombo" Width="150" Margin="5,0,0,0"
                          Background="#2D2D30" Foreground="White" BorderBrush="#555"
                          SelectionChanged="SortCombo_SelectionChanged">
                    <ComboBoxItem Content="Sort by Due Date ↑"/>
                    <ComboBoxItem Content="Sort by Due Date ↓"/>
                    <ComboBoxItem Content="Sort by Priority ↑"/>
                    <ComboBoxItem Content="Sort by Priority ↓"/>
                </ComboBox>
                <Button Content="Export" Margin="5,0,0,0"
                        Background="#3E3E42" Foreground="White" BorderBrush="#555"
                        Click="ExportData_Click"/>
                <Button Content="Import" Margin="5,0,0,0"
                        Background="#3E3E42" Foreground="White" BorderBrush="#555"
                        Click="ImportData_Click"/>
            </StackPanel>

            <TextBlock x:Name="TasksHeader" Text="Tasks"
                       FontSize="16" FontWeight="Bold" Margin="5"
                       Foreground="White"/>
            <ListBox x:Name="TasksList" Margin="5"
                     Background="#2D2D30" Foreground="White" BorderBrush="#444"
                     AllowDrop="True"
                     PreviewMouseLeftButtonDown="TasksList_PreviewMouseLeftButtonDown"
                     DragOver="TasksList_DragOver"
                     Drop="TasksList_Drop">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Edit Task" Click="EditTask_Click"/>
                        <MenuItem Header="Delete Task" Click="DeleteTask_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            <Button Content="Add Task" Margin="5"
                    Background="#3E3E42" Foreground="White" BorderBrush="#555"
                    Click="AddTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
